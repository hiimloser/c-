#include <iostream>
using namespace std;

int main()
{
    float sum=0;
    int n;
    int k=0;
    
    cout<<"n = ";
    cin>>n;
    for(int i=0;i<n;i++){
        if(i%2==0&&i>0){
            sum=sum+i;
            k++;
        }
    }
   
    cout<<"sum = "<<sum<<endl;
    cout<<"tong = "<<sum/k;
    
   return 0;
}
